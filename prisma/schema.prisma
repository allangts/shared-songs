generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  songs     Song[]
  albums    Album[]
  likes     Like[]
  createdAt DateTime @default(now())

  @@index([email])
}

model Song {
  id         String      @id @default(cuid())
  title      String
  artist     String
  genre      String?
  duration   Int         @default(0)
  audioKey   String
  coverKey   String?
  plays      Int         @default(0)
  uploader   User        @relation(fields: [uploaderId], references: [id], onDelete: Cascade)
  uploaderId String
  likes      Like[]
  albums     AlbumSong[]
  createdAt  DateTime    @default(now())

  @@index([uploaderId])
  @@index([uploaderId, createdAt(sort: Desc)])
  @@index([genre])
}

model Album {
  id          String      @id @default(cuid())
  name        String
  description String?
  coverKey    String?
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  songs       AlbumSong[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([userId, createdAt(sort: Desc)])
}

model AlbumSong {
  id        String   @id @default(cuid())
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   String
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId    String
  order     Int      @default(0)
  addedAt   DateTime @default(now())

  @@unique([albumId, songId])
  @@index([albumId])
  @@index([songId])
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId    String
  createdAt DateTime @default(now())

  @@unique([userId, songId])
  @@index([userId])
  @@index([songId])
}
